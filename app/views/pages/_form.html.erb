<%= render "shared/error_messages", :target => @page %>

<%= semantic_form_for @page do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :sub_title %>
    <%= f.input :content %>
    <%= f.input :latitude, :hint => 'If you specify a coordinate for this page, then it will have a map button' %>
    <%= f.input :longitude %>
    <%= f.hidden_field :section_id, "value" => @section.id %>
  <% end %>
  
  <%= f.buttons do %>
    <%= f.commit_button %>
    <%= f.cancel_button @cancel_path %>
  <% end %>
  
<% end %>
