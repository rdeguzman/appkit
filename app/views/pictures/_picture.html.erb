<li>
  <%= link_to_picture(picture)%>
  
  <div class="caption">
    <div class="download">
    </div>
    <div class="image-title"><%= picture.caption_title %></div>
    <div class="image-desc">
      <%= picture.caption_description %><br/><br/>
      
      <div class="action_items buttons">
        <% if params[:controller] == 'pictures' %>
          <!--<%= link_to "Edit Caption", edit_picture_path(picture) %>-->
          <%= link_to "Delete Picture", picture_path(picture), :confirm => "Are you sure?", :method => :delete %>
        <% elsif params[:controller] == 'photo_gallery' %>
          <%= link_to "Delete Picture", photo_gallery_destroy_path(picture), :confirm => "Are you sure?", :method => :delete %>
        <% end %>
      </div>
      
    </div>
  </div>
  
</li>
